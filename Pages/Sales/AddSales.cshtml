@page
@model Sales.AddSalesModel
@{
}
<a href="/Home" class="btn-primary " style="text-decoration:none">Back</a>
<br />
<h2>Add Sales</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="post">
    <!--Company Name-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Company_name" value="">
        </div>
    </div>
    <!--Company Contact-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Company Contact</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Company_contact" value="">
        </div>
    </div>
  
   
 
    <!--Paper Weight-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Paper Weight</label>
        <div class="col-sm-2">
            <input type="number" step="0.1" min="0" class="form-control" name="Paper_weight" value="0">

        </div>
        <div class="col-sm-1">kg</div>
    </div>
    <!--Paper Price-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Paper Price</label>
        <div class="col-sm-2">
            <input type="number" step="0.01" min="0" class="form-control" name="Paper_price" value="0">

        </div>
       
    </div>

    <!--Plastic Weight-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Plastic Weight</label>
        <div class="col-sm-2">
            <input type="number" step="0.1" min="0" class="form-control" name="Plastic_weight" value="0">

        </div>
        <div class="col-sm-1">kg</div>
    </div>
    <!--Plastic Price-->
    
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Plastic Price</label>
        
        <div class="col-sm-2">
            <input type="number" step="0.01" min="0" class="form-control" name="Plastic_price" value="0">

        </div>
        
    </div>

    <!--Metal Weight-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Metal Weight</label>
        <div class="col-sm-2">
            <input type="number" step="0.1" min="0" class="form-control" name="Metal_weight" value="0">

        </div>
        <div class="col-sm-1">kg</div>
    </div>
    <!--Metal Price-->
   
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Metal Price</label>
       
        <div class="col-sm-2">
            <input type="number" step="0.01" min="0" class="form-control" name="Metal_price" value="0">

        </div>
        
    </div>

    <!-- Cardboard Weight-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cardboard Weight</label>
        <div class="col-sm-2">
            <input type="number" step="0.1" min="0" class="form-control" name="Cardboard_weight" value="0">

        </div>
        <div class="col-sm-1">kg</div>
    </div>
    <!--Cardboard Price-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cardboard Price</label>
        <div class="col-sm-2">
            <input type="number" step="0.01" min="0" class="form-control" name="Cardboard_price" value="0">

        </div>
        
    </div>
    <!--Aluminium Can Weight-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Aluminium Cans Weight</label>
        <div class="col-sm-2">
            <input type="number" step="0.1" min="0" class="form-control" name="Aluminium_Cans_weight" value="0">

        </div>
        <div class="col-sm-1">kg</div>
    </div>
    <!--Aluminium Can Price-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Aluminium Can Price</label>
        <div class="col-sm-2">
            <input type="number" step="0.01" min="0" class="form-control" name="Aluminium_can_price" value="0">

        </div>
        
    </div>
    <!--Glass Bottle Weight-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Glass Bottles Weight</label>
        <div class="col-sm-2">
            <input type="number" step="0.1" min="0" class="form-control" name="Glass_bottle_weight" value="0">

        </div>
        <div class="col-sm-1">kg</div>
    </div>
    <!--Glass Bottle Price-->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Glass Bottle Price</label>
        <div class="col-sm-2">
            <input type="number" step="0.01" min="0" class="form-control" name="Glass_bottle_price" value="0">

        </div>
        
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Home" role="button">Cancel</a>
        </div>
    </div>
</form>